<Window x:Class="GUI.SignIn"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:GUI"
		mc:Ignorable="d"
		Title="Sign in" Height="262" Width="274">
	<StackPanel Margin="10">
		<Label Content="Full name: "/>
		<TextBox Name="FullName"/>
		<Label Content="Username: "/>
		<TextBox Name="username"/>
		<Label Content="Password: "/>
		<TextBox Name="password"/>
		<Label Content="Confirm Passwoed"/>
		<TextBox Name="cpassword"/>
		<Label Foreground="Red" Visibility="Hidden" Content="Error!" Padding="25 5 25 5"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="8*"/>
				<ColumnDefinition Width="1*"/>
			</Grid.ColumnDefinitions>
			<Button Content="Sign in!" Grid.Column="1" Click="Button_Click"/>
		</Grid>
	</StackPanel>
</Window>
